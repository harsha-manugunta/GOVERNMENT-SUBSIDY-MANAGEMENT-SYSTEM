doctype html
head
  include head
  title task-and-wiight-signup-page
include navbar
.container.mt-6(style="margin-top:10rem;")
  .row.d-flex.justify-content-center.align-items-center.h-100
    .col-lg-12.col-xl-11
      .card.text-black(style='border-radius: 25px;')
        .card-body.p-md-5
          .row.justify-content-center
            .col-md-10.col-lg-6.col-xl-5.order-2.order-lg-1
              p.text-center.h1.fw-bold.mb-5.mx-1.mx-md-4.mt-4 Create Workshop
              form.mx-1.mx-md-4(class="form--workshop")
                .d-flex.flex-row.align-items-center.mb-4
                  i.fas.fa-user.fa-lg.me-3.fa-fw
                  .form-outline.flex-fill.mb-0
                    input#from.form-control(type='text' readonly value=`ObjectId('${from}')`)
                    label.form-label(for='from') Analyst Id
                .d-flex.flex-row.align-items-center.mb-4
                  i.fas.fa-user.fa-lg.me-3.fa-fw
                  .form-outline.flex-fill.mb-0
                    input#eventName.form-control(type='text' name='name')
                    label.form-label(for='eventName') Event Name
                .d-flex.flex-row.align-items-center.mb-4
                  i.fas.fa-envelope.fa-lg.me-3.fa-fw
                  .form-outline.flex-fill.mb-0
                    input#eventAbout.form-control(type='text')
                    label.form-label(for='eventAbout') About the event
                
                .d-flex.flex-row.align-items-center.mb-4
                  i.fa-solid.fa-mobile-retro
                  .form-outline.flex-fill.mb-0
                    input#eventDate.form-control(type='date')
                    label.form-label(for='eventDate') event Date
                .d-flex.flex-row.align-items-center.mb-4
                  i.fas.fa-lock.fa-lg.me-3.fa-fw
                  .form-outline.flex-fill.mb-0
                    input#eventTime.form-control(type='time')
                    label.form-label(for='eventTime') event time
                
                  button.btn.btn-primary.btn-lg(type='submit') Post
            .col-md-10.col-lg-6.col-xl-7.d-flex.align-items-center.order-1.order-lg-2
              img.img-fluid(src='https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp' alt='Sample image')
