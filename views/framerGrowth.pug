head
  include head
  
  style.
    .container { margin-top: 10%;
    display: flex; }
    .progress-bar-vertical {
    width: 10px;
    min-height:500px;
    display: flex;
    align-items:flex-end;
    margin-right:10px;
    float: left;
    }
    .verticaltext{
     
      transform:rotate(90deg);
      transform-origin:left top 0;
    }
    .progress-bar-vertical .progress-bar {
    width: 100%;
    height: 0;
    -webkit-transition: height 0.6s ease;
    -o-transition: height 0.6s ease;
    transition: height 0.6s ease;
    }
include navbar
section(style="display:block; width:100px; height:100px; margin:auto;")
  #google_element
  script(src='https://translate.google.com/translate_a/element.js?cb=loadGoogleTranslate')
  script.
    function loadGoogleTranslate() {
    new google.translate.TranslateElement("google_element");
    }
.container
  each u in users
    if(u.roles=='farmer')
      .col.ml-2
        p(class="verticaltext" style="color:white; margin-top:3rem;")=`${u.name}`
        .progress.progress-bar-vertical
          .progress-bar(role='progressbar' aria-valuenow=`${u.sum}` aria-valuemin='0' aria-valuemax='50' style=`height:${u.sum}%` )
        p(style="color:white")=u.sum
