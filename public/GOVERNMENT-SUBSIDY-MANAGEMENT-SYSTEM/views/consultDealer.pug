doctype html
head
    include head
    style.
        body{
        background: url(/images/application/pic-24.jpg);
        background-size: cover;}
include navbar
section(style="display:block; width:100px; height:100px; margin:auto;")
  #google_element
  script(src='https://translate.google.com/translate_a/element.js?cb=loadGoogleTranslate')
  script.
    function loadGoogleTranslate() {
    new google.translate.TranslateElement("google_element");
    }
section(style='background-color:black; margin-top: 13rem; margin-bottom: 4rem;')
  .container.py-5
    .row
      .col-lg-4
        .card.mb-4
          .card-body.text-center
            img.rounded-circle.img-fluid(src=`/images/userPhotos/${dealer.photo}` alt='avatar' style='width: 150px;')
            h5.my-3=dealer.name
            p.text-muted.mb-1=dealer.roles
           
      .col-lg-8(style='margin-top: 4rem;font-size: larger;')
        .card.mb-4
          .card-body
            .row
              .col-sm-3
                p.mb-0 Full Name
              .col-sm-9
                p.text-muted.mb-0=dealer.name
            hr
            .row
              .col-sm-3
                p.mb-0 Email
              .col-sm-9
                p.text-muted.mb-0(style='text-transform: lowercase;')=dealer.email
            hr
            .row
              .col-sm-3
                p.mb-0 Phone
              .col-sm-9
                p.text-muted.mb-0=dealer.phone
            hr
            hr
            .row
              .col-sm-3
                p.mb-0 Score
              .col-sm-9
                p.text-muted.mb-0=dealer.sum
section#consult.consult
  h1.heading(style='margin-top: 6rem;')
    span(style='color: blue;') create
    |  deal
  .row
    form(class="form--dealer")
      span Dealer ID
      input.box(type='text' required=''  id="to" value=`${dealer._id}` readOnly)
      span Crop Photo
      input.box(type='file' required='' placeholder='upload crop photos'  name='cropPhoto' multiple id="cropPhoto")
      span Quantity[In kwintal]
      input.box(type='number' required='' placeholder='enter the quantity of crop'  name='quantity' id="quantity")
      span Place With Pincode
      input.box(type='text' required='' placeholder='enter your place' maxlength='50' name='place' id="place")
      span Expected Price
      input.box(type='number' required='' placeholder='expected price per kwintal' name='expectedPrice' id="expectedPrice")
      span Enter crop description
      input.box(type='text' required='' placeholder='enter crop description' maxlength='50' name='place' id="cropDesc")
     
      .d-flex.justify-content-center.mx-4.mb-3.mb-lg-4
            button.btn.btn-primary.btn-lg#voice(type='button') get voice assistance
      
      input.btn1(type='submit' value='CREATE')
include footer
