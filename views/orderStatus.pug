doctype html
| +
head
  include head

include navbar
section(style="display:block; width:100px; height:100px; margin:auto;")
  #google_element
  script(src='https://translate.google.com/translate_a/element.js?cb=loadGoogleTranslate')
  script.
    function loadGoogleTranslate() {
    new google.translate.TranslateElement("google_element");
    }
        
section(style="margin-top:2rem")
    // home section ends
    // Analysts section starts
    section#analysts.analysts
      h1.heading
        | order status
        span 
      |  
      .swiper.analyst-slider
        .swiper-wrapper
          each a in order
            
                .swiper-slide.slide
                  
                  h3=`${a.Id._id} DealId`
                  
                  h4
                    | Expected price:
                    p= a.expectedPrice
                  h4
                    | Status
                    if(a.status==0)
                        h2 order under process 
                    if(a.status==1)
                        h2 order delivered 
                  
                  
        |  
        .swiper-pagination

section#about.about(style='margin-top: 0rem;')
    h1.heading
      span about
      |  us
    .row
      .image
        img(src='/images/application/2jit.jpg' alt='')
