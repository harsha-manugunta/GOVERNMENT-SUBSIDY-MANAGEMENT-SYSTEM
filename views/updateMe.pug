doctype html
head
    include head
include navbar
section#consult.consult
  h1.heading(style='margin-top: 8rem;')
    span update
    |  profile
  .row
    form(class="form--update")
      span User ID
      input.box(type='text'  placeholder='enter user id ' maxlength='50' name='userId' id="userId" readOnly value=`${user._id}`)
      span Name
      input.box(type='text' placeholder='enter your name' maxlength='50' name='name' id="name" value=`${user.name}`)
      span email
      input.box(type='email'  placeholder='enter your email' max='50' min='0' name='email' style='text-transform: lowercase;' id="email" value=`${user.email}`)
      span Phone
      input.box(type='text'  placeholder='enter your email' max='50' min='0' name='phone' style='text-transform: lowercase;' id="phone" value=`${user.name}`)
      span Select profile photo
      input.box(type='file'  placeholder='upload your photo'  name='files' id="photo" )
      .d-flex.justify-content-center.mx-4.mb-3.mb-lg-4
          button.btn.btn-primary.btn-lg#voice(type='button') get voice assistance
      input.btn(type='submit' value='UPDATE' name='send')

include footer
